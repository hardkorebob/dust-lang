#include <stdio.h>

#define ARRAY_SIZE 10

// Function to print the elements of an integer array
func print_array_v(arr_ia, size_i) {
    printf("Array Contents:\n");
    let i_i = 0;
    if (size_i > 0) {
        do {
            printf("  Element %d: %d\n", i_i, arr_ia[i_i]);
            i_i = i_i + 1;
        } while (i_i < size_i);
    } else {
        printf("  (Array is empty)\n");
    }
    printf("--------------------\n");
}

// Function to find the largest number in an array
func find_max_i(arr_ia, size_i) {
    if (size_i <= 0) {
        return -1; // Return an error code for empty array
    }
    let max_val_i = arr_ia[0];
    let i_i = 1;
    while (i_i < size_i) {
        if (arr_ia[i_i] > max_val_i) {
            max_val_i = arr_ia[i_i];
        }
        i_i = i_i + 1;
    }
    return max_val_i;
}

// Main entry point of the program
func main_i() {
    printf("--- Array Test Program ---\n");
    
    // 1. Declare an integer array
    let numbers_ia[ARRAY_SIZE];
    
    // 2. Initialize the array using a while loop
    printf("Initializing array...\n");
    let i_i = 0;
    while (i_i < ARRAY_SIZE) {
        // Store some calculated values
        numbers_ia[i_i] = (i_i + 1) * 7;
        i_i = i_i + 1;
    }
    
    // 3. Print the array contents using a do-while loop
    print_array_v(numbers_ia, ARRAY_SIZE);
    
    // 4. Find and print the maximum value in the array
    let max_number_i = find_max_i(numbers_ia, ARRAY_SIZE);
    printf("Maximum value in the array is: %d\n", max_number_i);

    printf("--- Test Complete ---\n");
    
    return 0;
}

